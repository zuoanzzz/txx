<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bosc.txx.dao.UserMapper">

    <!-- 根据 accountId 查询用户 -->
    <select id="selectUserByAccountId" parameterType="string" resultType="com.example.entity.User">
        SELECT u.*
        FROM account a
        JOIN user u ON a.user_id = u.id
        WHERE a.account_id = #{accountId}
        AND u.deleted = 0
        LIMIT 1
    </select>

    <select id="selectUserByAccountId" parameterType="string" resultType="com.example.entity.User">
        SELECT u.*
        FROM user u
        WHERE u.employeeNo = #{employeeNo}
    </select>

</mapper>
